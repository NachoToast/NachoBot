{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "allowJs": true,
        "outDir": "./build/",
        "rootDir": "./src/",
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "alwaysStrict": true
    },
    "exclude": ["arc", "build", "ext"]
}
